= content_tag defined?(tag_type) ? tag_type : :div, class: 'comment' do
  = link_to "â–²", upvote_comment_url(comment), class: 'upvote', method: :post
  %div
    %span.statusline
      = statusline comment
      |
      = link_to 'link', comment
    %br
    = comment.body 

  - unless defined?(hide_children) && hide_children
    %ul.comments
      - comment.comments.each do |subcomment|
        = render partial: 'comments/comment', locals: { tag_type: :li, comment: subcomment }
